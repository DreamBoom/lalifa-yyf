    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/header3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="15dp"
        android:background="@mipmap/icon_header"
        app:layout_constraintStart_toStartOf="@+id/hg3"
        app:layout_constraintTop_toTopOf="@+id/hg3"
        app:shapeAppearance="@style/CircleStyle" />

    <ImageView
        android:id="@+id/hg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:background="@mipmap/ph3"
        app:layout_constraintEnd_toEndOf="@+id/co3"
        app:layout_constraintStart_toStartOf="@+id/co3"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.recyclerview.widget.RecyclerView
        tools:listitem="@layout/item_ph"
        app:layout_constraintTop_toBottomOf="@+id/co1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>