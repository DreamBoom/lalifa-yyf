<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#181818">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@mipmap/icon_header"
        app:shapeAppearance="@style/CircleStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="用户名称"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_header"
        app:layout_constraintTop_toTopOf="@id/item_header" />
    <ImageView
        android:id="@+id/im"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_constraintStart_toEndOf="@id/name"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_icon_boy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/level"
        android:textSize="10dp"
        android:text="财富等级"
        android:background="@drawable/bg_y1"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toEndOf="@+id/item_header"
        app:layout_constraintBottom_toBottomOf="@+id/item_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"/>

    <TextView
        android:textSize="10dp"
        android:text="魅力等级"
        android:background="@drawable/bg_zs"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toEndOf="@+id/level"
        app:layout_constraintBottom_toBottomOf="@+id/item_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"/>
    <TextView
        app:layout_constraintTop_toTopOf="@id/item_header"
        app:layout_constraintBottom_toBottomOf="@id/item_header"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="回关"
        android:layout_marginEnd="15dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:background="@drawable/bg_fen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>