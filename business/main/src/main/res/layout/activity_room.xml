<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/zs"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/closeRoom"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingStart="10dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/roomHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/roomHeader" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/roomHeader"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/closeRoom"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/CircleStyle"
        tools:background="@drawable/app_icon" />

    <TextView
        android:id="@+id/RoomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/size18"
        app:layout_constraintStart_toEndOf="@+id/roomHeader"
        app:layout_constraintTop_toTopOf="@+id/roomHeader"
        tools:text="111" />

    <TextView
        android:id="@+id/tvRoomId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/size16"
        app:layout_constraintBottom_toBottomOf="@+id/roomHeader"
        app:layout_constraintStart_toEndOf="@+id/roomHeader"
        tools:text="ID:111" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/roomHeader"
        app:layout_constraintEnd_toStartOf="@+id/more"
        app:layout_constraintTop_toTopOf="@+id/roomHeader" />

    <ImageView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:paddingHorizontal="10dp"
        android:src="@mipmap/room_more"
        app:layout_constraintBottom_toBottomOf="@+id/roomHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/roomHeader" />
    <!--    房主 老板位 信息 -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/roomHeader">

        <include
            android:id="@+id/creater"
            layout="@layout/layout_seat_item" />

        <include
            android:id="@+id/boss"
            layout="@layout/layout_seat_item" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <!--    麦位列表-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rl_seat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ll1" />
    <TextView
        android:id="@+id/task"
        android:text="任务"
        android:gravity="center"
        android:textSize="@dimen/size12"
        android:textColor="@color/white"
        android:background="@drawable/rl_zs"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/create"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="35dp"
        android:layout_height="35dp" />
    <TextView
        android:id="@+id/create"
        android:text="创建"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/size12"
        android:background="@drawable/rl_zs"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toTopOf="@+id/train"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="35dp"
        android:layout_height="35dp" />
    <TextView
        android:id="@+id/train"
        android:text="队列"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/size12"
        android:background="@drawable/rl_zs"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toTopOf="@+id/btLl"
        android:layout_marginBottom="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="35dp"
        android:layout_height="35dp" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/btLl"
        android:orientation="horizontal"
        android:background="@drawable/bg_tm30"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sendMessage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/icon_edit_message_bg"
            android:gravity="center"
            android:text="聊聊吧..."
            android:textColor="@color/white"
            android:textSize="12sp" />
        <ImageView
            android:layout_marginStart="35dp"
            android:background="@drawable/ic_send_gift"
            android:layout_width="36dp"
            android:layout_height="36dp"/>
        <ImageView
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/ic_mic_switch"
            android:layout_width="36dp"
            android:layout_height="36dp"/>
        <ImageView
            android:background="@drawable/ic_room_setting_mute"
            android:layout_width="36dp"
            android:layout_height="36dp"/>
        <ImageView
            android:layout_marginHorizontal="5dp"
            android:background="@mipmap/room_yx"
            android:layout_width="36dp"
            android:layout_height="36dp"/>
        <ImageView
            android:background="@drawable/ic_room_setting"
            android:layout_width="36dp"
            android:layout_height="36dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_room_finished_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33333333"
        android:clickable="true"
   >

        <Button
            android:id="@+id/btn_go_back_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingStart="20dp"
            android:background="@drawable/bg_zs30"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="退出房间"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_go_back_list"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:text="该房间直播已结束"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>