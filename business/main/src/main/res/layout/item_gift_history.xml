<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_black12">

        <ImageView
            android:id="@+id/giftHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/name"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toStartOf="@+id/tvGift"
            app:layout_constraintStart_toEndOf="@+id/giftHeader"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:lines="1"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14" />
        <TextView
            android:id="@+id/tvGift"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="送给你1个"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14" />
        <ImageView
            android:id="@+id/giftIm"
            app:layout_constraintStart_toEndOf="@+id/tvGift"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp" />
        <TextView
            android:id="@+id/giftTime"
            app:layout_constraintStart_toEndOf="@+id/giftIm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:text="2022/1/1"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>