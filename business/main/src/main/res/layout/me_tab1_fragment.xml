<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical">
    <TextView
        android:id="@+id/t1"
        android:textColor="@color/white"
        android:layout_marginHorizontal="15dp"
        android:textSize="14dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="TA经常去的房间"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/im1"
        android:background="#FFCE70"
        app:layout_constraintTop_toBottomOf="@+id/t1"
        app:layout_constraintStart_toStartOf="@+id/t1"
        app:layout_constraintEnd_toEndOf="@+id/t1"
        android:layout_width="0dp"
        android:layout_height="3dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list1"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@+id/im1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/t2"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/list1"
        app:layout_constraintStart_toStartOf="parent"
        android:text="个人标签"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/im2"
        android:background="#FFCE70"
        app:layout_constraintTop_toBottomOf="@+id/t2"
        app:layout_constraintStart_toStartOf="@+id/t2"
        app:layout_constraintEnd_toEndOf="@+id/t2"
        android:layout_width="0dp"
        android:layout_height="3dp"/>
    <TextView
        android:id="@+id/sign"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/im2"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:text="本宝宝还没想好签名·"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/t3"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/sign"
        app:layout_constraintStart_toStartOf="parent"
        android:text="勋章墙"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/im3"
        android:background="#FFCE70"
        app:layout_constraintTop_toBottomOf="@+id/t3"
        app:layout_constraintStart_toStartOf="@+id/t3"
        app:layout_constraintEnd_toEndOf="@+id/t3"
        android:layout_width="0dp"
        android:layout_height="3dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list2"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@+id/im3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>